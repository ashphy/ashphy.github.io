---
import { Picture } from "astro:assets";
import logo from "../assets/ashphy.png";
---

<header>
  <h1>
    <Picture
      src={logo}
      alt="ashphy"
      formats={['avif', 'webp']}
      layout='constrained'      
    />
  </h1>
  <div class="profile">
    <p class="name">Hamasaki Kazuki</p>
  </div>
</header>

<style>
  header {
    width: 600px;
    position: relative;
    margin: 0 auto 80px auto;
  }

  h1 {
    text-align: center;
    margin-block-start: 1rem;
  }

  .profile {
    position: absolute;
    right: 80px;
    bottom: 0;
    text-align: center;
    margin: 0 auto;
  }

  .name {
    font-size: 2.2rem;
    font-family: "Lexend Deca", cursive;
  }

  /* for mobile */
  @media screen and (max-width: 800px) {
    header {
      width: 100%;
      margin: 0 auto;
    }

    .profile {
      position: static;
      text-align: center;
    }    

    .name {
      position: relative;
      bottom: 50px;
      font-size: 1.6rem;
      margin-block: 0;
      text-shadow: 2px 2px 2px #dddddd;
    }
  }
</style>
