---
import Card from "./Card.astro";
import { getOgp } from "../lib/ogp";

export interface Props {
  src: string;
}

const { src } = Astro.props;
const ogp = await getOgp(src);
---

<Card
  title={ogp.title}
  siteName={ogp.siteName}
  image={ogp.imageURL}
  width={ogp.width}
  height={ogp.height}
  url={ogp.url}
/>
