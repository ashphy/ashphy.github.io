---
import { Picture } from "@astrojs/image/components";
---

<header>
  <h1>
    <Picture
      src={import("../assets/ashphy.png")}
      alt="ashphy"
      aspectRatio="16:9"
      width="600px"
      widths={[600, 1200, 1800]}
      sizes="(min-width: 600px) 600px, 100%"
      loading="eager"
    />
  </h1>
  <div class="profile">
    <p class="name">Hamasaki Kazuki</p>
  </div>
</header>

<style>
  header {
    width: 600px;
    position: relative;
    margin: 0 auto 80px auto;
  }

  h1 {
    text-align: center;
    margin-block: 0;
  }

  img {
    display: block;
    aspect-ratio: 16 / 9;
  }

  .profile {
    position: absolute;
    right: 80px;
    bottom: 0;
    text-align: center;
    margin: 0 auto;
  }

  .name {
    font-size: 2.2rem;
    font-family: "Lexend Deca", cursive;
  }

  /* for mobile */
  @media screen and (max-width: 800px) {
    header {
      width: 100%;
      margin: 0 auto;
    }

    .profile {
      position: static;
      text-align: center;
    }

    img {
      width: 100%;
    }

    .name {
      position: relative;
      bottom: 50px;
      font-size: 1.6rem;
      margin-block: 0;
      text-shadow: 2px 2px 2px #dddddd;
    }
  }
</style>
